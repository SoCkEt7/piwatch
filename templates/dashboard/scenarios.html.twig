            border-radius: 24px;
            position: relative;
            overflow: hidden;
        }

        .scenarios-hero::before {
            content: 'üîÆ';
            position: absolute;
            top: 1rem;
            right: 2rem;
            font-size: 3rem;
            opacity: 0.3;
            animation: float 4s ease-in-out infinite;
        }

        .scenarios-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .scenarios-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .scenario-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .scenario-card {
            background: var(--gradient-dark);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .scenario-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.5s ease;
        }

        .scenario-card:hover::before {
            transform: scaleX(1);
        }

        .scenario-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .scenario-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .scenario-icon {
            font-size: 2rem;
