            },
            {
                author: "PI Network Official",
                handle: "@PiNetworkOfficial", 
                avatar: "PN",
                content: "üìä Weekly stats: Mining rate has stabilized, active user engagement up 15%, and app performance improved significantly. Keep mining, Pioneers!",
                sentiment: "positive",
                sentimentScore: 89,
                time: "Il y a 30min"
            },
            {
                author: "PI Development",
                handle: "@PIDevelopment",
                avatar: "PD",
                content: "‚ö° Smart contract deployment on testnet successful! Final testing phase before mainnet integration. Exciting times ahead! #SmartContracts #PINetwork",
                sentiment: "positive",
                sentimentScore: 96,
                time: "Il y a 1h"
            }
        ];

        let tweetIndex = 0;

        function addNewTweet() {
            const tweet = tweets[tweetIndex % tweets.length];
            const container = document.getElementById('tweets-container');
            
            const tweetElement = document.createElement('div');
            tweetElement.className = 'tweet';
            tweetElement.style.opacity = '0';
            tweetElement.style.transform = 'translateY(-20px)';
            
            const sentimentClass = tweet.sentiment;
            const sentimentIcon = tweet.sentiment === 'positive' ? 'üìà' : 
                                 tweet.sentiment === 'negative' ? 'üìâ' : '‚öñÔ∏è';
            const sentimentText = tweet.sentiment === 'positive' ? 'Positif' :
                                 tweet.sentiment === 'negative' ? 'N√©gatif' : 'Neutre';
            
            tweetElement.innerHTML = `
                <div class="tweet-header">
                    <div class="tweet-avatar">${tweet.avatar}</div>
                    <div class="tweet-meta">
                        <div class="tweet-author">${tweet.author}</div>
                        <div class="tweet-handle">${tweet.handle}</div>
                    </div>
                    <div class="tweet-time">${tweet.time}</div>
                </div>
                <div class="tweet-content">
                    ${tweet.content}
                </div>
                <div class="sentiment-indicator ${sentimentClass}">
                    ${sentimentIcon} Sentiment ${sentimentText} (${tweet.sentimentScore}%)
                </div>
            `;
            
            container.insertBefore(tweetElement, container.firstChild);
            
            // Animate in
            setTimeout(() => {
                tweetElement.style.transition = 'all 0.5s ease';
                tweetElement.style.opacity = '1';
                tweetElement.style.transform = 'translateY(0)';
            }, 100);
            
            // Remove oldest tweets if more than 5
            const allTweets = container.querySelectorAll('.tweet');
            if (allTweets.length > 5) {
                const oldest = allTweets[allTweets.length - 1];
                oldest.style.transition = 'all 0.3s ease';
                oldest.style.opacity = '0';
                oldest.style.transform = 'translateY(20px)';
                setTimeout(() => oldest.remove(), 300);
            }
            
            tweetIndex++;
        }

        // Update confidence levels based on sentiment
        function updateScenarios() {
            const positiveConfidence = Math.min(95, 70 + Math.random() * 20);
            const negativeConfidence = Math.max(5, 40 - Math.random() * 20);
            
            const bullishFill = document.querySelector('.scenario-card:first-child .confidence-fill');
            const bearishFill = document.querySelector('.scenario-card:last-child .confidence-fill');
            const bullishLabel = document.querySelector('.scenario-card:first-child .confidence-label span:last-child');
            const bearishLabel = document.querySelector('.scenario-card:last-child .confidence-label span:last-child');
            
            bullishFill.style.width = positiveConfidence + '%';
            bearishFill.style.width = negativeConfidence + '%';
            bullishLabel.textContent = Math.round(positiveConfidence) + '%';
            bearishLabel.textContent = Math.round(negativeConfidence) + '%';
        }

        // Add new tweet every 30 seconds
        setInterval(addNewTweet, 30000);

        // Update scenarios every minute
        setInterval(updateScenarios, 60000);

        // Initial updates
        setTimeout(addNewTweet, 5000);
        updateScenarios();
        
        // Animate confidence bars on load
        document.addEventListener('DOMContentLoaded', function() {
            const fills = document.querySelectorAll('.confidence-fill');
            fills.forEach(fill => {
                const width = fill.style.width;
                fill.style.width = '0%';
                setTimeout(() => {
                    fill.style.transition = 'width 1s ease';
                    fill.style.width = width;
                }, 500);
            });
        });
