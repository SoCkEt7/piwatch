{% extends 'base.html.twig' %}

{% block title %}Scénarios - PI Crypto Watch{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .scenarios-hero {
            text-align: center;
            padding: 3rem 0;
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(0, 212, 170, 0.1) 100%);
            margin-bottom: 3rem;
            border-radius: 24px;
            position: relative;
            overflow: hidden;
        }

        .scenarios-hero::before {
            content: '🔮';
            position: absolute;
            top: 1rem;
            right: 2rem;
            font-size: 3rem;
            opacity: 0.3;
            animation: float 4s ease-in-out infinite;
        }

        .scenarios-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
        }

        .scenarios-subtitle {
            color: var(--text-secondary);
            font-size: 1.1rem;
        }

        .scenario-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .scenario-card {
            background: var(--gradient-dark);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .scenario-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.5s ease;
        }

        .scenario-card:hover::before {
            transform: scaleX(1);
        }

        .scenario-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .scenario-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .scenario-icon {
            font-size: 2rem;
            padding: 1rem;
            background: rgba(0, 212, 170, 0.1);
            border-radius: 12px;
            border: 1px solid rgba(0, 212, 170, 0.3);
        }

        .scenario-info h3 {
            color: var(--text-primary);
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .scenario-type {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 500;
        }

        .prediction-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            font-family: 'JetBrains Mono', monospace;
        }

        .prediction-value.bullish {
            color: #22c55e;
        }

        .prediction-value.bearish {
            color: #ef4444;
        }

        .prediction-value.neutral {
            color: var(--accent-warning);
        }

        .confidence-bar {
            margin-bottom: 1.5rem;
        }

        .confidence-label {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .confidence-progress {
            height: 8px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            overflow: hidden;
        }

        .confidence-fill {
            height: 100%;
            background: var(--gradient-primary);
            border-radius: 4px;
            transition: width 0.5s ease;
        }

        .factors-list {
            margin-top: 1rem;
        }

        .factor {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            color: var(--text-secondary);
        }

        .factor-impact {
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .factor-impact.positive {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .factor-impact.negative {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .twitter-feed {
            background: var(--gradient-dark);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            margin-bottom: 2rem;
        }

        .twitter-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .twitter-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
        }

        .scraping-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(0, 212, 170, 0.1);
            border: 1px solid var(--accent-primary);
            border-radius: 20px;
            font-size: 0.8rem;
            color: var(--accent-primary);
        }

        .scraping-dot {
            width: 8px;
            height: 8px;
            background: var(--accent-primary);
            border-radius: 50%;
            animation: pulse-dot 1.5s ease-in-out infinite;
        }

        .tweet {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-left: 3px solid #1da1f2;
            transition: all 0.3s ease;
        }

        .tweet:hover {
            background: rgba(0, 0, 0, 0.5);
            transform: translateX(5px);
        }

        .tweet-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .tweet-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #1da1f2, #0d8bd9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .tweet-meta {
            flex: 1;
        }

        .tweet-author {
            color: var(--text-primary);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .tweet-handle {
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        .tweet-time {
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        .tweet-content {
            color: var(--text-primary);
            line-height: 1.6;
            margin-bottom: 1rem;
        }

        .sentiment-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .sentiment-indicator.positive {
            background: rgba(34, 197, 94, 0.1);
            color: #22c55e;
            border: 1px solid rgba(34, 197, 94, 0.3);
        }

        .sentiment-indicator.negative {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        .sentiment-indicator.neutral {
            background: rgba(245, 158, 11, 0.1);
            color: var(--accent-warning);
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        .ai-analysis {
            background: linear-gradient(135deg, rgba(124, 58, 237, 0.1) 0%, rgba(0, 212, 170, 0.1) 100%);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

        .ai-analysis::before {
            content: '🤖';
            position: absolute;
            top: 1rem;
            right: 2rem;
            font-size: 2rem;
            opacity: 0.3;
        }

        .ai-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .analysis-text {
            color: var(--text-secondary);
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .analysis-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .analysis-tag {
            padding: 0.5rem 1rem;
            background: rgba(0, 212, 170, 0.1);
            border: 1px solid rgba(0, 212, 170, 0.3);
            border-radius: 20px;
            color: var(--accent-primary);
            font-size: 0.8rem;
            font-weight: 500;
        }

        @media (max-width: 768px) {
            .scenario-grid {
                grid-template-columns: 1fr;
            }
            
            .scenarios-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

